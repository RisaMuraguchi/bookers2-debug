<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
    </div>

  <!--投稿数、前日比、先週日-->
    <table class="table">
     <thead>
     <tr>
      <th>今日の投稿</th>
      <th>昨日の投稿</th>
      <th>前日比</th>
     </tr>
     </thead>
    <tbody>
     <tr>
      <td><%= @today_book.count %></td>
      <td><%= @yesterday_book.count %></td>
      <% if @yesterday_book.count == 0 %>
      <td>前日の投稿はありません</td>
      <% else %>
      <td><% @the_day_before =   @today_book.count / @yesterday_book.count.to_f  %>
      <%= (@the_day_before * 100).round %>%</td>
      <% end %>
      </tr>
    </tbody>
    </table>

    <table class="table">
     <thead>
     <tr>
      <th>今週の投稿</th>
      <th>先週の投稿</th>
      <th>前週比</th>
     </tr>
     </thead>
     <tbody>
     <tr>
      <td><%= @this_week_book.count %></td>
      <td><%= @last_week_book.count %></td>
      <% if @last_week_book.count == 0 %>
      <td>先週の投稿はありません</td>
      <% else %>
      <td><% @the_week_before =   @this_week_book.count / @last_week_book.count.to_f  %>
      <%= (@the_week_before * 100).round %>%</td>
      <% end %>
     </tr>
   </tbody>
  </table>

  <!--過去７日分-->
  <div>
  <table class="table">
   <thead>
    <tr>
     <th>6日前</th>
     <th>5日前</th>
     <th>4日前</th>
     <th>3日前</th>
     <th>2日前</th>
     <th>1日前</th>
     <th>今日</th>
    </tr>
   </thead>
   <tbody>
    <tr>
     <th><%= @books.created_6days.count %></th>
     <th><%= @books.created_5days.count %></th>
     <th><%= @books.created_4days.count %></th>
     <th><%= @books.created_3days.count %></th>
     <th><%= @books.created_2days.count %></th>
     <th><%= @yesterday_book.count %></th>
     <th><%= @today_book.count %></th>
    </tr>
   </tbody>
  </table>
  </div>
 <!--グラフ-->
  <%= render 'graph', books: @books %>

<!--日付で検索機能-->
　<%= form_with url: user_search_path(@user), method: :get do |f| %>
   <%= f.date_field :created_at %>
   <%= f.submit '検索', class: 'btn btn-primary'  %>
　<% end %>

  <div id="search_result">
   <% if @search_book.present? %>
    <%= render 'search', search_book: @search_book %>　#③
   <% end %>

  </div>
</div>
